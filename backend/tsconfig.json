{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "lib": ["ES2021"],
        "moduleResolution": "bundler",
        "types": ["bun-types"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}